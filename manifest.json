{
  "manifest_version": 3,
  "name": "Gemini TTS",
  "version": "1.0",
  "description": "Text-to-Speech using Gemini API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "sidePanel"
  ],
  "action": {
    "default_title": "GSpeech - Gemini TTS"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
